<Window x:Class="ProjectOffice.Windows.ProjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectOffice.Windows"
        mc:Ignorable="d"
        Title="Добавление проекта" Height="70" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <TextBlock FontSize="16" Text="Название проекта: "></TextBlock>
            <TextBox x:Name="TitleTb" Width="200" Text="{Binding FullTitle}"></TextBox>
            <Button x:Name="AddBtn" Click="AddBtn_Click" Margin="10,0,0,0" Width="150" Padding="10,5" Content="Сохранить"></Button>
        </StackPanel>
    </Grid>
</Window>
