<UserControl x:Class="ProjectOffice.UserControls.ProgramAddControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectOffice.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="800">
    <Border CornerRadius="10" BorderThickness="1" BorderBrush="Gray" Padding="5" Margin="5">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0">Добавить</TextBlock>
            <Image Source="/Resources/IconAdd.jpg" Grid.Column="1" Stretch="Uniform" MouseLeftButtonDown="Image_MouseLeftButtonDown"></Image>
        </Grid>
    </Border>
</UserControl>
