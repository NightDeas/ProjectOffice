<UserControl x:Class="ProjectOffice.UserControls.DataControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectOffice.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="400">
    <Border CornerRadius="5" BorderThickness="1" BorderBrush="Gray">
        <Grid>
            <TextBlock Text="{Binding Text}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0">Фото с доски.png</TextBlock>
            <TextBlock Text="{Binding Size, StringFormat={}{0} mb}" HorizontalAlignment="Right" Foreground="Gray" VerticalAlignment="Center"></TextBlock>
        </Grid>
    </Border>
</UserControl>
