@inherits LayoutComponentBase
@inject NavigationManager NavigationManager
<RadzenComponents></RadzenComponents>
<PageTitle>Проектный офис</PageTitle>

<RadzenRow Style="min-width:300px">
    <RadzenColumn Size="2" Style="max-width:200px" Visible="@ShowMenu">
        <RadzenText Style="text-align: center" Text="Меню"></RadzenText>
        <RadzenPanelMenu>
            <RadzenPanelMenuItem Style="text-align: center" Text="Календарь" Click="Calendar_Click"></RadzenPanelMenuItem>
        </RadzenPanelMenu>
    </RadzenColumn>
    <RadzenColumn Style="margin-top: 50px;" class="d-flex justify-content-center">
        @Body
    </RadzenColumn>
</RadzenRow>


@code {
    public static bool ShowMenu = false;
    private void Calendar_Click(MenuItemEventArgs e)
    {
        NavigationManager.NavigateTo("/Calendar");
    }

    private void DashBoard_Click(MenuItemEventArgs e)
    {
        NavigationManager.NavigateTo("/Dashboard");
    }
}